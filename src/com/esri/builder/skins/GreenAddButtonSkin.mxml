<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        minHeight="24">
    <fx:Metadata>[HostComponent("spark.components.Button")]</fx:Metadata>

    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>

    <!--background-->
    <s:Rect left="0" right="0" top="0" bottom="0"
            includeIn="disabled"
            radiusX="7"
            radiusY="7"
            verticalCenter="0">
        <s:fill>
            <s:LinearGradient x="36.5" y="0"
                              rotation="90"
                              scaleX="24">
                <s:GradientEntry color="#B3B3B3" ratio="0"/>
                <s:GradientEntry color="#666666" ratio="1"/>
            </s:LinearGradient>
        </s:fill>

        <s:stroke>
            <s:SolidColorStroke caps="none"
                                color="#666666"
                                joints="miter"
                                miterLimit="10"/>
        </s:stroke>
    </s:Rect>

    <s:Rect left="0" right="0" top="0" bottom="0"
            includeIn="down,up"
            radiusX="7"
            radiusY="7"
            verticalCenter="0">
        <s:fill>
            <s:LinearGradient x="36.5" y="0"
                              rotation="90"
                              scaleX="24">
                <s:GradientEntry color="#BAD995" ratio="0"/>
                <s:GradientEntry color="#578D1E" ratio="1"/>
            </s:LinearGradient>
        </s:fill>

        <s:stroke>
            <s:SolidColorStroke caps="none"
                                color="#578D1E"
                                joints="miter"
                                miterLimit="10"/>
        </s:stroke>
    </s:Rect>

    <s:Rect left="0" right="0" top="0" bottom="0"
            includeIn="over"
            radiusX="7"
            radiusY="7"
            verticalCenter="0">
        <s:fill>
            <s:LinearGradient x="36.5" y="0"
                              rotation="90"
                              scaleX="24">
                <s:GradientEntry color="#97C6D8" ratio="0"/>
                <s:GradientEntry color="#0C77A1" ratio="1"/>
            </s:LinearGradient>
        </s:fill>

        <s:stroke>
            <s:SolidColorStroke caps="none"
                                color="#0C77A1"
                                joints="miter"
                                miterLimit="10"/>
        </s:stroke>
    </s:Rect>

    <!--add symbol-->
    <s:Group y="6" left="10">
        <s:Rect x="0" y="4" width="12" height="4">
            <s:fill>
                <s:SolidColor color="#FFFFFF"/>
            </s:fill>
        </s:Rect>

        <s:Rect x="4" y="0" width="4" height="12">
            <s:fill>
                <s:SolidColor color="#FFFFFF"/>
            </s:fill>
        </s:Rect>
    </s:Group>

    <s:RichText id="labelDisplay"
                left="29" right="7" top="5" bottom="5"
                color="#FFFFFF"
                fontWeight="bold"
                textAlign="center"
                verticalAlign="middle"
                verticalCenter="0.5"/>
</s:Skin>
