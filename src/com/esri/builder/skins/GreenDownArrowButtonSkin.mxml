<s:Skin xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:fc="http://ns.adobe.com/flashcatalyst/2009"
        fc:manageBounds="false"
        minHeight="25"
        minWidth="109">
    <fx:Metadata>[HostComponent("spark.components.Button")]</fx:Metadata>

    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>

    <s:Rect left="0" right="0" top="0" bottom="0"
            includeIn="over"
            radiusX="7"
            radiusY="7"
            verticalCenter="0">
        <s:fill>
            <s:LinearGradient x="53.762" y="0"
                              rotation="90"
                              scaleX="35.352">
                <s:GradientEntry color="#97C6D8" ratio="0"/>
                <s:GradientEntry color="#0C77A1" ratio="1"/>
            </s:LinearGradient>
        </s:fill>

        <s:stroke>
            <s:SolidColorStroke caps="none"
                                color="#0C77A1"
                                joints="miter"
                                miterLimit="10"/>
        </s:stroke>
    </s:Rect>

    <s:Rect left="0" right="0" top="0" bottom="0"
            includeIn="down, up"
            radiusX="7"
            radiusY="7"
            verticalCenter="0">
        <s:fill>
            <s:LinearGradient x="53.764" y="0"
                              rotation="90"
                              scaleX="35.351">
                <s:GradientEntry color="#BAD995" ratio="0"/>
                <s:GradientEntry color="#578D1E" ratio="1"/>
            </s:LinearGradient>
        </s:fill>

        <s:stroke>
            <s:SolidColorStroke caps="none"
                                color="#578D1E"
                                joints="miter"
                                miterLimit="10"/>
        </s:stroke>
    </s:Rect>

    <s:Rect left="0" right="0" top="0" bottom="0"
            includeIn="disabled,up"
            radiusX="7"
            radiusY="7"
            verticalCenter="0">
        <s:fill>
            <s:LinearGradient x="53.764" y="0"
                              rotation="90"
                              scaleX="35.351">
                <s:GradientEntry color="#B3B3B3" ratio="0"/>
                <s:GradientEntry color="#666666" ratio="1"/>
            </s:LinearGradient>
        </s:fill>

        <s:stroke>
            <s:SolidColorStroke caps="none"
                                color="#666666"
                                joints="miter"
                                miterLimit="10"/>
        </s:stroke>
    </s:Rect>

    <s:RichText id="labelDisplay"
                left="5" right="18" right.up="21"
                color="#FFFFFF"
                fontWeight="bold"
                textAlign="center"
                verticalAlign="middle"
                verticalCenter="0.5"/>

    <s:Group right="5"
             transformX="-2"
             transformY="1"
             verticalCenter="-0.5">
        <s:Path x="0.665" y="5.345" height="8.555"
                data="M 6.12 10.61 L 0 0 L 12.24 0 L 6.12 10.61 Z">
            <s:fill>
                <s:SolidColor color="#FFFFFF"/>
            </s:fill>
        </s:Path>

        <s:Rect x="5.001" y="0.001" width="4" height="6">
            <s:fill>
                <s:SolidColor color="#FFFFFF"/>
            </s:fill>
        </s:Rect>
    </s:Group>
</s:Skin>
