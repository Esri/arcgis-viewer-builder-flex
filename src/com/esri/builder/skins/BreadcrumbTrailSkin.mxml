<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
             xmlns:s="library://ns.adobe.com/flex/spark"
             alpha.disabled="0.5"
             blendMode="normal"
             minWidth="112">
    <fx:Metadata>
        <![CDATA[ 
        [HostComponent("spark.components.List")]
    ]]>
    </fx:Metadata>
    <fx:Script>
        <![CDATA[
            import com.esri.builder.model.Breadcrumb;
            import com.esri.builder.renderers.BreadcrumbItemRenderer;
            import com.esri.builder.renderers.LastBreadcrumbItemRenderer;

            private function breadcrumbItemRendererFunction(breadcrumb:Breadcrumb):IFactory
            {
                var itemRendererClass:Class;

                if (isSelectedBreadcrumbLast(breadcrumb))
                {
                    itemRendererClass = LastBreadcrumbItemRenderer;
                }
                else
                {
                    itemRendererClass = BreadcrumbItemRenderer;
                }

                return new ClassFactory(itemRendererClass);
            }

            private function isSelectedBreadcrumbLast(breadcrumb:Breadcrumb):Boolean
            {
                var breadcrumbIndex:int = dataGroup.dataProvider.getItemIndex(breadcrumb);
                return breadcrumbIndex == (dataGroup.dataProvider.length - 1);
            }
        ]]>
    </fx:Script>
    <s:states>
        <s:State name="normal"/>
        <s:State name="disabled"/>
    </s:states>
    <s:DataGroup id="dataGroup" itemRendererFunction="breadcrumbItemRendererFunction">
        <s:layout>
            <s:HorizontalLayout verticalAlign="contentJustify"/>
        </s:layout>
    </s:DataGroup>
</s:SparkSkin>
