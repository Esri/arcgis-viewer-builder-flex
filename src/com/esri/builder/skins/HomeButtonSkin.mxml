<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        alpha.disabled="0.5"
        minHeight="44"
        minWidth="44">
    <fx:Metadata>
        <![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
    <s:states>
        <s:State name="up"/>
        <s:State name="over"/>
        <s:State name="down"/>
        <s:State name="disabled"/>
    </s:states>
    <s:Rect id="border"
            left="0" right="0" top="0" bottom="0"
            radiusX="5">
        <s:stroke>
            <s:SolidColorStroke color="white"
                                pixelHinting="true"
                                weight="2"
                                weight.down="4"
                                weight.over="3"/>
        </s:stroke>
    </s:Rect>
    <s:Label id="labelDisplay"
             fontSize="24"
             horizontalCenter="0"
             maxDisplayedLines="1"
             paddingBottom="10"
             paddingLeft="10"
             paddingRight="10"
             paddingTop="10"
             textAlign="center"
             verticalCenter="1">
    </s:Label>
</s:Skin>
