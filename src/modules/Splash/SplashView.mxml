<s:Form xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        xmlns:supportClasses="com.esri.builder.views.supportClasses.*"
        width="100%" height="100%"
        implements="modules.IWidgetView">
    <fx:Script>
        <![CDATA[
            import modules.IWidgetModel;

            [Bindable]
            public var splashModel:SplashModel;

            public function set widgetModel(value:IWidgetModel):void
            {
                if (value is SplashModel)
                {
                    splashModel = value as SplashModel;
                }
                else
                {
                    throw new Error('argument is not an instance of SplashModel');
                }
            }

            public function get widgetModel():IWidgetModel
            {
                return splashModel;
            }

            public function submit():Boolean
            {
                return true;
            }

            public function cancel():void
            {
                // NOOP
            }
        ]]>
    </fx:Script>

    <s:FormItem width="100%" height="100%"
                label="{resourceManager.getString('BuilderStrings', 'splash.content')}"
                skinClass="spark.skins.spark.StackedFormItemSkin">
        <supportClasses:ContentEditor width="100%" height="100%"
                                      content="@{splashModel.content}"/>
    </s:FormItem>
</s:Form>
